# ===========================================
# Docker Compose Environment Variables
# ===========================================
# Copy this file to .env and update the values

# Node Environment
NODE_ENV=development

# ===========================================
# Nginx Configuration
# ===========================================
NGINX_PORT=80

# ===========================================
# MongoDB Configuration
# ===========================================
MONGODB_PORT=27017
MONGO_INITDB_DATABASE=url_shortener

# ===========================================
# RabbitMQ Configuration
# ===========================================
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672
RABBITMQ_DEFAULT_USER=admin
RABBITMQ_DEFAULT_PASS=admin123

# ===========================================
# JWT Configuration
# ===========================================
JWT_SECRET=your-jwt-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# ===========================================
# Auth Service Configuration
# ===========================================
AUTH_SERVICE_PORT=5001
AUTH_DB_NAME=auth-service

# Admin Seeder Configuration
ADMIN_EMAIL=admin@urlshortener.com
ADMIN_PASSWORD=Admin@123
ADMIN_NAME=Admin User

# ===========================================
# URL Service Configuration
# ===========================================
URL_SERVICE_PORT=5002
URL_DB_NAME=url-service
BASE_URL=http://localhost
DEFAULT_EXPIRY_DAYS=30

# ===========================================
# Email Service Configuration
# ===========================================
EMAIL_SERVICE_PORT=5003

# Gmail Configuration
# To get App Password:
# 1. Enable 2-Step Verification on your Google Account
# 2. Go to https://myaccount.google.com/apppasswords
# 3. Generate a new App Password for "Mail"
# 4. Use that 16-character password below
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=xxxx-xxxx-xxxx-xxxx
FROM_EMAIL=your-email@gmail.com
APP_NAME=URL Shortener

# ===========================================
# Logging Configuration
# ===========================================
LOG_LEVEL=info
